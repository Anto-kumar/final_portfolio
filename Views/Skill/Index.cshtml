@model List<Skill> 
<!--==================== SKILLS ====================-->
<section class="skills section" id="skills">
    <h2 class="section__title">Skills</h2>
    <span class="section__subtitle">My technical level</span>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Skill" asp-action="Create" style="text-decoration: none; color: #007BFF; font-weight: bold; border-bottom: 2px solid #007BFF; transition: border-bottom 0.3s;">
            Create Skill
        </a>
    }
   
    <div class="skills__container container grid">
        <div>
            <!--==================== SKILL-1 ====================-->
            <div class="skills__content skills__open">
                <div class="skills__header">
                    <i class="uil uil-analytics skills__icon"></i>
                    <div>
                        <h1 class="skills__title">Programming Skills</h1>
                        <span class="skills__subtitle">More than 2 years</span>
                    </div>

                    <i class="uil uil-angle-down skills__arrow"></i>
                </div>
                <div class="skills__list grid">

                    @foreach (var skill in Model)
                    {
                        <div class="skills__data">
                            <div class="skills__titles">
                                <h3 class="skills__name"> @skill.Name</h3>
                                <span class="skills__number">@skill.Level</span>
                            </div>
                            <div class="skills__bar">
                                <span class="skills__percentage skills__python"></span>
                            </div>
                        </div>


                        @if (User.Identity.IsAuthenticated)
                        {
                            <div style="margin-bottom: 25px">
                                <a asp-route-id="@skill.Id" asp-controller="Skill" asp-action="Edit" style="text-decoration: none; color: #007bff; padding: 5px 10px; border: 1px solid #007bff; border-radius: 5px; background-color: #f8f9fa; margin-right: 10px;">Edit</a>
                                <span>|</span>
                                <a asp-route-id="@skill.Id" asp-controller="Skill" asp-action="Delete" style="text-decoration: none; color: #dc3545; padding: 5px 10px; border: 1px solid #dc3545; border-radius: 5px; background-color: #f8f9fa;">Delete</a>
                            </div>
                        }


                        
                    }
                </div>
            </div>
        </div>
</section>



